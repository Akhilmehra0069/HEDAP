						</div>

					</div>
					<!-- / MEDIA OBJECT -->
					<!-- HEADING AREA -->
				</div>
				<!-- GRID COL -->
				<div class="slds-col slds-no-flex slds-align-middle">
					<div class="slds-button-group" role="group">
						<button class="slds-button slds-button--neutral">Edit</button>
					</div>
				</div>
				<!-- / GRID COL -->
			</div>
			<!-- / LAYOUT GRID -->
			<p class="slds-text-body--small slds-m-top--x-small">App-wide
				Settings</p>
		</div>
		<!-- / PAGE HEADER -->
		
        <section>
			<div class="slds-tabs--default">
				<ul class="slds-tabs--default_nav slds-list--horizontal"
					role="tablist">
					<li class="slds-tabs__item slds-text-heading--label slds-active"><a>Affiliations</a></li>
					<li class="slds-tabs__item slds-text-heading--label"><a>Relationships</a></li>
					<li class="slds-tabs__item slds-text-heading--label"><a>Addresses</a></li>
					<li class="slds-tabs__item slds-text-heading--label"><a>System</a></li>
				</ul>
				<div
					class="site-code--content slds-scrollable--x slds-tabs__content slds-show"
					role="tabpanel">Test1</div>
				<div
					class="site-code--content slds-scrollable--x slds-tabs__content slds-hide"
					role="tabpanel">Test2</div>
				<div
