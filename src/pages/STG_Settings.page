<apex:page showHeader="true" standardStylesheets="false" applyBodyTag="false" docType="html-5.0">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">  
	<apex:stylesheet value="{!URLFOR($Resource.SLDS080, 'assets/styles/salesforce-lightning-design-system-vf.css')}" />
	<script src="/lightning/lightning.out.js" />
	<script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
    $(function() {
        $( "#tabs" ).tabs();
    });
    </script>
  
	<div class="slds">
		<!-- PAGE HEADER -->
		<div class="slds-page-header" role="banner">

			<!-- LAYOUT GRID -->
			<div class="slds-grid">

				<!-- GRID COL -->
				<div class="slds-col">
					<!-- HEADING AREA -->
					<!-- MEDIA OBJECT = FIGURE + BODY -->
					<div class="slds-media">
						<div class="slds-media__figure">
							<svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-standard-user">
				            <use xlink:href="{!URLFOR($Resource.SLDS080, 'assets/icons/standard-sprite/svg/symbols.svg#custom')}"></use>
				          </svg>
						</div>

						<div class="slds-media__body">
							<p class="slds-text-heading--label">HEDA Settings</p>
							<h1 class="slds-text-heading--medium">Configuration</h1>
						</div>

					</div>
					<!-- / MEDIA OBJECT -->
					<!-- HEADING AREA -->
				</div>
				<!-- GRID COL -->
				<div class="slds-col slds-no-flex slds-align-middle">
					<div class="slds-button-group" role="group">
						<button class="slds-button slds-button--neutral">Edit</button>
					</div>
				</div>
				<!-- / GRID COL -->
			</div>
			<!-- / LAYOUT GRID -->
			<p class="slds-text-body--small slds-m-top--x-small">App-wide
				Settings</p>
		</div>
		<!-- / PAGE HEADER -->
		<br/>
		<div id="tabs" class="slds-tabs--default">
			<ul class="slds-tabs--default__nav" role="tablist">
				<li class="slds-tabs__item slds-text-heading--label slds-active" tile="Affiliations" role="presentation"><a href="#tabs-1" role="tab" tabindex="0" aria-selected="true">Affiliations</a></li>
				<li class="slds-tabs__item slds-text-heading--label" title="Relationships" role="presentation"><a href="#tabs-2" role="tab" tabindex="-1" aria-selected="false">Relationships</a></li>
				<li class="slds-tabs__item slds-text-heading--label" title="Addresses" role="presentation"><a href="#tabs-3" role="tab" tabindex="-1" aria-selected="false">Addresses</a></li>
				<li class="slds-tabs__item slds-text-heading--label" title="System" role="presentation"><a href="#tabs-4" role="tab" tabindex="-1" aria-selected="false">System</a></li>
			</ul>
			
			<div id="tabs-1" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel"><div id="afflSettings"/></div>
			<div id="tabs-2" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel"><div id="relSettings"/></div>
			<div id="tabs-3" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel"><div id="addrSettings"/></div>
			<div id="tabs-4" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel"><div id="sysSettings"/></div>
		</div>
        
        <br/>
        <div id="menu" />
        
        <br/>
		<div id="lightning" />
	</div>

    <script>
        $Lightning.use("c:SettingsApp", function() {
            loadComponents();
        });
        
        function loadComponents() {
            $Lightning.createComponent("c:AfflSettings", {}, "afflSettings");
            $Lightning.createComponent("c:RelSettings", {}, "relSettings");
            $Lightning.createComponent("c:AddrSettings", {}, "addrSettings");
            $Lightning.createComponent("c:SysSettings", {}, "sysSettings");
            //$Lightning.createComponent("c:SettingsMenu", {}, "menu");
            //$Lightning.createComponent("c:MyContactList", {}, "lightning");
        }
    </script>

    </html>
</apex:page>