<aura:component>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:handler event="c:STG_EVT_Edit" action="{!c.toggleIsView}"/>
    
    <aura:attribute name="hierarchySettings" type="Hierarchy_Settings__c" />
    <aura:attribute name="isView" type="Boolean" default="true"/>
    <aura:attribute name="namespacePrefix" type="String" />
    
    <div class="slds-grid slds-wrap">
        <div class="slds-col slds-size--1-of-2">Organization Addresses Enabled:</div>
        <div class="slds-col slds-size--1-of-2"><ui:inputCheckbox disabled="{!v.isView}" value="{!v.hierarchySettings.Organizational_Account_Addresses_Enabled__c}"/></div>

        <div class="slds-col slds-size--1-of-2">Household and Administrative Addresses Enabled:</div>
        <div class="slds-col slds-size--1-of-2"><ui:inputCheckbox disabled="{!v.isView}" value="{!v.hierarchySettings.Household_Adm_Acct_Addresses_Enabled__c}"/></div>

        <div class="slds-col slds-size--1-of-2">Simple Address Change Treated as Update:</div> 
        <div class="slds-col slds-size--1-of-2"><ui:inputCheckbox disabled="{!v.isView}" value="{!v.hierarchySettings.Simple_Address_Change_Treated_as_Update__c}"/></div>
    </div>
</aura:component>