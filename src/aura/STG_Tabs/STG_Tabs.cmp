<aura:component>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    
    <div id="tabs" class="slds-tabs--default">
         <ul class="slds-tabs--default__nav" role="tablist">
             <li aura:id="afflTab" class="slds-tabs__item slds-text-heading--label" tile="Affiliations" role="presentation">
                 <a aura:id="afflLink" href="#" role="tab" aria-controls="tab-default-1"><ui:outputText value="Affiliations" click="{!c.afflLinkClicked}"/></a>
             </li>
             <li aura:id="relTab" class="slds-tabs__item slds-text-heading--label" title="Relationships" role="presentation">
                 <a aura:id="relLink" href="#" role="tab" aria-controls="tab-default-2"><ui:outputText value="Relationships" click="{!c.relLinkClicked}"/></a>
             </li>
             <li aura:id="addrTab" class="slds-tabs__item slds-text-heading--label" title="Addresses" role="presentation">
                 <a aura:id="addrLink" href="#" role="tab" aria-controls="tab-default-3"><ui:outputText value="Addresses" click="{!c.addrLinkClicked}"/></a>
             </li>
             <li aura:id="systemTab" class="slds-tabs__item slds-text-heading--label" title="System" role="presentation">
                 <a aura:id="sysLink" href="#" role="tab" aria-controls="tab-default-4"><ui:outputText value="System" click="{!c.sysLinkClicked}"/></a>
             </li>
         </ul>
         
         <div aura:id="afflTabContent" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel">
             <c:STG_Affl />
         </div>
         <div aura:id="relTabContent" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel">
             <c:STG_Rel />
         </div>
         <div aura:id="addrTabContent" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel">
             <c:STG_Addr />
         </div>
         <div aura:id="systemTabContent" class="site-code--content slds-scrollable--x slds-tabs__content" role="tabpanel">
             <c:STG_System />
         </div>
     </div>
</aura:component>